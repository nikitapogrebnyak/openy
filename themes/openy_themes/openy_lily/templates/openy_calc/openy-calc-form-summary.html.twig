<div class="calc-summary">
  <div class="selected-branch calc-summary-col">
    <h4>{{ 'Your selected branch:'|t }}</h4>
    <div class="selected-branch-map">{{ map }}</div>
    <div>{{ result.location }}</div>
  </div>
  <div class="selected-membership calc-summary-col">
  <h4>{{ 'Your selected membership:'|t }}</h4>
    {% if result.price %}
      <a href="#" class="card" data-id="{{ key }}">
        {{ result.membership }}
        <div class="price">
          <h4>{{ 'Membership price:'|t }}</h4>
          <div class="monthly_rate">${{ result.price.monthly_rate }}
            /{{ 'month'|t }}</div>
          <div>+
            ${{ result.price.join_fee }} {{ 'one time joining fee'|t }}</div>
        </div>
      </a>
    {% else %}
      <div class="price">
        {{ 'Unfortunately, selected branch doesn`t provide needed membership type. Please select other membership type or branch.'|t }}
      </div>
    {% endif %}
  </div>
</div>
